/* components/map/index.wxss */
.input-box {
	padding: 0 20rpx;
	box-sizing: border-box;
	position: relative;
}

.input {
	padding: 10rpx 0;
	display: flex;
	align-items: center;
	/* border-bottom: 1rpx solid #e7e7e7; */
}

.default-label {
	width: 200rpx;
	margin-bottom: 10rpx;
}

.default-input {
	flex: 1;
}

.required {
	position: relative;
}

.required::before {
	position: absolute;
	left: -20rpx;
	top: 50%;
	transform: translateY(-50%);
	color: rgb(226, 38, 47);
	content: "*";
}

.isDisabled {
	background-color: whitesmoke;
	color: #999999;
}


/* 
文本框
*/
.default-textarea {
	width: 100%;
}


.word-limit,
.input-word-limit {
	color: #999999;
	font-size: 26rpx;
	text-align: right;
	position: absolute;
	bottom: 20rpx;
	right: 20rpx;
}
.input-word-limit{
	bottom: -10rpx;
}

.errmsg {
	text-align: center;
	font-size: 24rpx;
	color: #F84E55;
}