/* components/map/index.wxss */
.box{
	padding:0 20rpx;
	box-sizing: border-box;
	position: relative;
}
.input{
	padding: 10rpx 0;
	display: flex;
	align-items: center;
	/* border-bottom: 1rpx solid #e7e7e7; */
}
.default-label{
	width: 200rpx;
	margin-bottom: 10rpx;
}
.default-input{
	flex: 1;
}
.required{
	position: relative;
}
.required::before{
	position: absolute;
	left: -16rpx;
	top: 50%;
	transform: translateY(-50%);
	color: rgb(241, 78, 86);
	content: "*";
}
.isDisabled{
	background-color: whitesmoke;
	color: #999999;
}


/* 
