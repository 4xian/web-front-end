.default-textarea{
	/* border: 1rpx solid #e6e6e6; */
	/* border-radius: 10rpx; */
	width: 100%;
}


.word-limit{
	color: #999999;
	font-size: 26rpx;
	text-align: right;
	position: absolute;
	top: 20rpx;
	right: 20rpx;
}

.errmsg{
	position: absolute;
	bottom: -10rpx;
	left: 50%;
	transform: translateX(-50%);
	/* text-align: center; */
	font-size: 28rpx;
	color: #F84E55;
}
